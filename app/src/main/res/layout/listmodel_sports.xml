<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/btnColor"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_sportsRoomName"
            android:layout_alignParentStart="true"
            android:paddingVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/txtColor"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_user"
                app:tint="@color/txtColor"/>

            <TextView
                android:id="@+id/txt_sports_peopleCount"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtColor"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:id="@+id/margin_sports_title"
            android:layout_below="@id/txt_sportsRoomName"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <ImageView
            android:id = "@+id/ic_location"
            android:layout_alignParentStart="true"
            android:layout_below="@id/margin_sports_title"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_affiliates"
            app:tint="@color/gray"/>

        <TextView
            android:id="@+id/txt_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/gray"
            android:layout_below="@id/margin_sports_title"
            android:layout_toEndOf="@id/ic_location"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/margin_sports_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_time"
                app:tint="@color/accent"/>

            <TextView
                android:id="@+id/txt_timeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:textColor="@color/accent"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:id="@+id/margin_sports_type"
            android:layout_below="@id/txt_position"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/txt_sportsType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_below="@id/margin_sports_type"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>